<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:contentPadding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@drawable/bg1"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/font"
                android:text="ImageView"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:contentDescription="Item Image"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_item_image" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:background="@drawable/bg1"
            android:drawableLeft="@drawable/ic_draw_left"
            android:drawableTop="@drawable/ic_draw_top"
            android:drawableRight="@drawable/ic_draw_left"
            android:drawableBottom="@drawable/ic_draw_top"
            android:drawablePadding="8dp"
            android:fontFamily="@font/font"
            android:gravity="center"
            android:padding="8dp"
            android:text="TextView"
            android:textColor="@color/text_color"
            android:textSize="18sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>